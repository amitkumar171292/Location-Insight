<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shakeba" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:orientation="vertical" >
        
         <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="MOBILE TRACKER "
            android:textColor="@color/black"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="129dp"
            android:src="@drawable/logo" />

        <TableLayout
            android:id="@+id/tablelayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/setmobno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="setsms"
                    android:src="@drawable/setmob" />

                <ImageView
                    android:id="@+id/siminfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="sim"
                    android:src="@drawable/sim" />
            </TableRow>
            </TableLayout>
            <ImageView
                    android:id="@+id/resetapps"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="reset"
                    android:src="@drawable/reset" />
    </LinearLayout>
 
</ScrollView>